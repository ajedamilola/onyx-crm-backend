<%- include("./header.ejs") %>
    <div class="container pb-5 pt-3 fs-4">
        <img style='width: 50px;height:50px;border-radius: 200px'
            src="<%- image %>" />
        <h3 class='fw-bold'>
            <%= name %>'s Report <span class='badge bg-info'>
                    (<%= type %>)
                </span>
        </h3>
        <table class="table table-striped table-borderless mt-5">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Event</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach((event)=>{ %>
                    <tr>
                        <td style="text-align: center;"><%- events.indexOf(event)+1 %></td>
                        <td style="text-align: center;"><%- event.content %></td>
                        <td style="text-align: center;"><%- event.date %></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>
    <hr />
    <%- include("./footer.ejs") %>